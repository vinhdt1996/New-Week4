<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/layoutSignup"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:drawablePadding="20dp"
        android:background="@drawable/textview_top_corner"
        android:id="@+id/edtUsernamesignup"
        android:drawableLeft="@drawable/user_on"
        android:hint="Username"
        android:padding="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:drawableLeft="@drawable/mail_on"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:padding="20dp"
        android:id="@+id/edtEmailsignup"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toBottomOf="@id/edtUsernamesignup"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorWhite"
        android:hint="Email address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:textSize="16sp"
        android:fontFamily="monospace"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/password_on"
        android:drawablePadding="20dp"
        android:id="@+id/edtPasssignup"
        android:hint="Password"
        android:padding="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/textview_bot_corner"
        app:layout_constraintTop_toBottomOf="@id/edtEmailsignup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/edtPasssignup"
        android:id="@+id/linear"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_marginRight="5dp"
            android:id="@+id/btnSignupFb"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:src="@drawable/fb"
            android:background="@drawable/full_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:textSize="16sp"
            android:id="@+id/btnSignupwithemail"
            android:textColor="@color/colorPrimaryDark"
            android:textAllCaps="false"
            android:text="Sign up with email"
            android:background="@drawable/full_corner"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>