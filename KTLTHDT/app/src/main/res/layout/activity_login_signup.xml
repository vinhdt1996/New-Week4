<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".login_signup.StartActivity">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/txtbesttrip"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:textSize="50sp"
            android:textColor="@color/colorWhite"
            android:text="My Taxi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/txtbesttrip"
            android:id="@+id/txtbtwu"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorWhite"
            android:text="Best trip with us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TabLayout
            android:layout_marginTop="50dp"
            app:tabMaxWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/txtbtwu"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            app:tabTextAppearance="@style/capfale"
            app:tabSelectedTextColor="@color/colorWhite"
            app:tabIndicatorColor="@color/colorPrimaryDark"
            android:id="@+id/tabLayoutLogin"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            app:layout_constraintTop_toBottomOf="@id/tabLayoutLogin"
            android:id="@+id/viewpagerLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v4.view.ViewPager>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>