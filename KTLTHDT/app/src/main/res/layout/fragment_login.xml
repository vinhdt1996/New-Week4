<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutLogin"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:fontFamily="@font/kayak_sans_regular"
        android:drawableLeft="@drawable/mail_on"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="20dp"
        android:id="@+id/edtEmaillogin"
        android:drawablePadding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/textview_top_corner"
        android:hint="Email address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:textSize="16sp"
        android:fontFamily="monospace"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/password_on"
        android:drawablePadding="20dp"
        android:id="@+id/edtPasslogin"
        android:hint="Password"
        android:padding="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/textview_bot_corner"
        app:layout_constraintTop_toBottomOf="@id/edtEmaillogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ImageButton
        android:id="@+id/btnFbLogin"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/fb"
        app:layout_constraintRight_toLeftOf="@id/btnEmailLogin"
        android:layout_marginRight="5dp"
        android:background="@drawable/full_corner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtPasslogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnEmailLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/full_corner"
        android:padding="20dp"
        android:text="Login with email"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSelectHandle="@color/colorLightBlue"
        android:textSize="16sp"

        app:layout_constraintLeft_toRightOf="@id/btnFbLogin"
        app:layout_constraintRight_toRightOf="@id/edtPasslogin"
        app:layout_constraintTop_toTopOf="@id/btnFbLogin" />

    <TextView
        android:id="@+id/txtLoginGuest"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEmailLogin"
        android:textColor="@color/colorWhite"
        android:text="Login as a guest"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="15sp"
        android:id="@+id/txtForgot"
        android:layout_marginTop="25dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtLoginGuest"
        android:textColor="@color/colorWhite"
        android:text="Forgot password?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>